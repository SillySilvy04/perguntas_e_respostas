<%- include('partials/header.ejs', {}) %>
<body>
    <%- include('partials/navbar.ejs', {}) %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p> <%= pergunta.descicao %> </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="resposta">Resposta</label>
            <textarea class="form-control" placeholder="Insira sua responda" name="corpo" id=""></textarea>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <br>
            <button class="btn btn-dark" type="submit">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <% }); %>
    </div>
</body>
<%- include('partials/footer.ejs', {}) %>